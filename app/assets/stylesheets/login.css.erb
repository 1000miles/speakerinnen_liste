@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic&v2);

* {
	margin: 0;
	padding: 0;
	border: 0;
}



#badge-log
{
	width: 334px;
	height: 586px;
	margin: 0 auto 0 auto;
	background: url(<%=asset_path "badge.png"%>) 0 0 no-repeat;
	position: relative;
	z-index: 99999;
}
#badge-inner
{
	width: 320px;
	height: 400px;
	position: absolute;
	top: 174px;
	left: 7px;
}

#badge-inner p {
	position: absolute;
	left: 7%;
    bottom: -4px;
    z-index: 5555;
    color: black;
}

#badge-inner .forgot-p {
	position: absolute;
	left: 25%;
	bottom: -140px;
    z-index: 5555;
    color: black;
    font-size: 0.8em;
}

#badge-inner .remember {
	position: absolute;
	bottom: 11px;
    z-index: 5555;
    color: black;
}

#login
{
	position: absolute;
	bottom: 40px;
	left: 20px;
	right: 20px;
}

#logo
{
	width: 70%;
	position: absolute;
	top: 5%;
	left:15%;
	

}
	#logo img
	{
		width: 100%;
		height: 100%;
	}
	
#badge form
{
	margin: 0;
}

#badge .control-group .input-xlarge, input[type="password"], input[type="email"]
{
	width: 284px;
	height: 43px;
	padding: 0 12px;
	font-size: 16px;
	line-height: 1;
	margin-bottom: 0;
	font-family: inherit;
}


.control-group
{
	margin-bottom: 7px;
	position: relative;
}
.control-group:last-child
{
	margin-bottom: 0;
}




.control-group .log-in-button {
width: 280px;
height: 48px;
font-size: 18px;
font-weight: 600;
text-align: center;
font-family: inherit;
text-transform: uppercase;
	background-color: #f5f5f5;
  background-image: -moz-linear-gradient(top, #e6e6e6, #a7a7a7);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e6e6e6), to(#a7a7a7));
  background-image: -webkit-linear-gradient(top, #e6e6e6, #a7a7a7);
  background-image: -o-linear-gradient(top, #e6e6e6, #a7a7a7);
  background-image: linear-gradient(to bottom,#e6e6e6, #a7a7a7);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffffff', endColorstr='#ffe6e6e6', GradientType=0);
  border-color: #e6e6e6 #e6e6e6 #bfbfbf;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);

}

.control-group .log-in-button-twitter {
padding-top: 12px;
width: 280px;
color: black;
height: 48px;
font-size: 18px;
font-weight: 600;
text-align: center;
font-family: inherit;
text-transform: uppercase;
	background-color: #f5f5f5;
  background-image: -moz-linear-gradient(top, #e6e6e6, #a7a7a7);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e6e6e6), to(#a7a7a7));
  background-image: -webkit-linear-gradient(top, #e6e6e6, #a7a7a7);
  background-image: -o-linear-gradient(top, #e6e6e6, #a7a7a7);
  background-image: linear-gradient(to bottom,#e6e6e6, #a7a7a7);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffffff', endColorstr='#ffe6e6e6', GradientType=0);
  border-color: #e6e6e6 #e6e6e6 #bfbfbf;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
}

.control-group .log-in-button:hover, 
.control-group .log-in-button:focus, 
.control-group .log-in-button-twitter:hover, 
.control-group .log-in-button-twitter:focus {
text-decoration: none;
background-color: #f5f5f5;
background-position: 0 -3px;
-webkit-transition: background-position 0.1s linear;
-moz-transition: background-position 0.1s linear;
-o-transition: background-position 0.1s linear;
transition: background-position 0.1s linear;
}



                         
