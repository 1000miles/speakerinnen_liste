html  {
  -webkit-text-size-adjust:100%;
  -ms-text-size-adjust:100%;
}

body {
  margin:0;
  font-size: 100%;
  line-height: normal;
  background-color: whitesmoke;
}


  /*basics*/

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
nav,
section {
  display:block;
  }

audio,
canvas,
video {
  display:inline-block;
  *display:inline;*zoom:1;
  }

audio:not([controls]) {
  display:none;
  }

[hidden]  {
  display:none;
  }

::-moz-selection {
  background:#ecd10c;
  color:#222;
  text-shadow:none;
}

::selection {
  background:#ecd10c;
  color:#3c3c3a;
  text-shadow:none;
}

.underline {
  display:inline-block;
  border-bottom:10px double rgba(255, 255, 255, 0.4);
}
