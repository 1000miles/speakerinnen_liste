/*clearfix*/

.clear {
  clear:both;
  display:block;
  overflow:hidden;
  visibility:hidden;
  height:0;}

.clearfix:before,.clearfix:after {
  content:'.';
  display:block;
  overflow:hidden;
  visibility:hidden;
  font-size:0;
  line-height:0;
  width:0;
  height:0;
}

.clearfix:after {
  clear:both;
}

.clearfix {
  zoom:1;
}

