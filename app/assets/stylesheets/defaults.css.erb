}

.normal{
  font-family:"proxima-nova-alt","Helvetica Neue",Helvetica,Arial,Verdana,sans-serif;
}

hr {
  display:block;
  height:1px;
  border:0;
  border-top:1px solid #ccc;
  margin:1em 0;
  padding:0;
}

p {
  margin:6px 0px 12px 0px;
}

/*links*/

a {
  color:#7B7B78;
  text-decoration:none;
  list-style: none;
}

a:visited {
