
.well {
 
  border: none;
  padding-top: 50px;
  margin-left: 4%;
  background-color: whitesmoke;
}

.well legend {
text-align: center;
font-weight: bold;
font-size: 2em;
padding: 2em 0 1em;
}

.well input[type="text"], .well .input-xlarge  {
height: 43px;
padding: 0 14px;
width: 250px;
margin: 0;
}

.well .input-xlarge  {
height: 160px;
}

.well input[type="email"], .well input[type="password"] {
width: 250px;
height: 43px;
padding: 0 12px;
font-size: 16px;
}

.well input[type="submit"].btn {
	width: 100%;
	height: 43px;
}

.well .form-actions {
    margin: 30px;
    padding: 0;
}

.well .forget-password {
	margin-left: 5%;
	font-size: 0.8em;
	text-align: center;
}