.heading {
  padding: 0;
  }

.photo-bar {
  background-attachment:fixed;
  -webkit-background-size:cover;
  -moz-background-size:cover;
  -o-background-size:cover;
  background-size:cover;
  box-shadow:inset 0px 0px 20px rgba(0, 0, 0, 0.5);
  padding:80px 0px;
  }

/* ---------------------Text on Pics --------------*/
.text-white-bg {
  display:inline-block;
  background-color:rgba(255, 255, 255, 0.7);
  padding:12px 12px 20px 12px;
  margin: 10px 10px;
  color:#3c3c3a;
  font-family:'Merriweather',Georgia,serif;
  font-size:24px;
}

.text-white-bg a {
  color:#3c3c3a;
  padding: 0px 4px;
  background-color:whitesmoke;
}

.text-white-bg a:hover {
  color: whitesmoke;
  background-color:#3c3c3a;
  padding: 0px 4px;
}

.tagline {
  font-size:4em;
  }


.tagline-second {
  font-weight: lighter;
  }


  /* --------------Topics---------------- */
.category a {
  font-size: 1.5em;
  background-color: whitesmoke;
  }

.category a:hover {
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  background-color: whitesmoke;
  padding: 0px 8px;
  font-size: 1.7em;
}

.copyright {
  text-align: right;
  margin-right: 10px;
  font-size: 12px
}

































/*curies badge*/

.curie-badge img {
  position: fixed;
  z-index: 1;
  left: 68%;
  top:60%;
  width: 8%;
  transition: all .3s ease-in-out;
  -webkit-transition: all .3s ease-in-out;
  transform: rotate(-10deg);
  -moz-transform: rotate(-10deg);
  -webkit-transform: rotate(-10deg);
}

.curie-badge img:hover {
  transform:  translate(-25px, 20px) rotate(0deg) scale(1.3);
  -moz-transform: translate(-25px, 20px) rotate(0deg) scale(1.3);
  -webkit-transform: translate(-25px, 20px) rotate(0deg) scale(1.3);
}



