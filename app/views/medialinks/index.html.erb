<div class="container profiles">
  <div class="text-white-bg">
    <div class="row">
      <div class="span12">
        <h1>Referenzen</h1>
      </div>
    </div>
    <div class="row">
      <div class="span12 text-right">
        <%= link_to(t(:home, scope: "profiles.edit"), profiles_path) %> |
        <%= link_to(t(:show, scope: "profiles.edit"), @profile) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <span class="italic"><%= t(:medialink_description, scope: "profiles.medialinks").html_safe %></span>
    </div>
  </div>
  <br>
  <br>
    <div class="row">
      <div class="span2">
        <%= link_to '<i class="icon-plus icon-white"></i> HinzufÃ¼gen'.html_safe,
                  new_profile_medialink_path(@profile), class: "btn btn-info" %>
        <br>
        <br>
      </div>
      <div class="span10">
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <table class="table table-striped table-hovered">
          <tr>
      <!-- # TODO translation -->
            <th>Link</th>
            <th>Title</th>
            <th>Description</th>
            <th></th>
            <th></th>
          </tr>
          <% @medialinks.each do |medialink| %>
            <tr>
              <td><%= link_to medialink.url, medialink.url %></td>
              <td><%= medialink.title %></td>
              <td><%= medialink.description %></td>
              <td><%= link_to '<i class="icon-pencil"></i> edit'.html_safe, edit_profile_medialink_path(@profile.id, medialink.id) %></td>
              <td>
                <%= link_to '<i class="icon-remove"></i> delete'.html_safe,
                            profile_medialink_path(@profile.id, medialink.id),
                            confirm: 'Are you sure?',
                            method: :delete %>
