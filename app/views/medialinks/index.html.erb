<section class="content--bg-grey">
  <div class="layout-wrapper">

    <div class="layout">
      <div class="layout__item 2/3">

        <h1><%= t(:index, scope: "medialinks")%></h1>

      </div><!--
      --><div class="layout__item 1/3">

        <%= link_to(t(:home, scope: "profiles.edit"), profiles_path) %> |
        <%= link_to(t(:show, scope: "profiles.edit"), @profile) %>

      </div>
    </div>
    <div class="layout">
      <div class="layout__item 2/3">

        <p class="pb bb"><%= t(:medialink_description, scope: "medialinks").html_safe %></p>

      </div>
    </div>

    <div class="layout pb+">
      <div class="layout__item 1/1">

        <%= link_to(new_profile_medialink_path(@profile)) do %>
          <div class='btn btn--small mv'>
            <i class="fa fa-plus-circle"></i>
            <%= t(:new, scope: 'medialinks') %>
          </div>
        <% end %>

        <h2 class="pt">
          <%= t(:media, scope: "profiles.profile") %>
        </h2>

        <p class="help"><%= t(:help, scope: "medialinks").html_safe %></p>

        <p id="medialinks__list--sort-message"></p>

        <ul id="medialinks__list" data-update-url="<%= sort_profile_medialinks_url%>" class="<%= t(:language, scope: "medialinks")%>">
          <% @medialinks.each do |medialink| %>
            <%= content_tag_for(:li, medialink, nil, {'title' => t(:tooltip, scope: 'medialinks')}) do %>
              <b>
                <%= medialink.title %>
              </b>
              <%= medialink.url_html %>
              <%= medialink.description %>

              <hr>

              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe+ t(:edit_link, scope: "medialinks"), edit_profile_medialink_path(@profile.id, medialink.id) %>
              <%= link_to '<i class="fa fa-minus-circle"></i>'.html_safe+ t(:delete_link, scope: "medialinks"), profile_medialink_path(@profile.id, medialink.id),
                  confirm: 'Are you sure?',
                  method: :delete %>

            <% end %>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</section>
