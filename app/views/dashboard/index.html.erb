<section id="about-top">

       <div class="badge"><%= image_tag("badge2-bw.png", :alt => "badge") %> </div>
 
              <script>
                    $(window).scroll(function() {
                    if ($(this).scrollTop() > 0) {
                        $(".badge").stop().animate({
                            opacity: 0 }, 50);
                    } else {
                    $(".badge").stop().animate({
                    opacity: 1 }, 50);}});
                </script>
              
      <div class="container">
        <div class="heading">
          <div class="large serif">
          <span class="text-white-bg"><%=t ".Organizer find your speaker" %></span>
          <br/>
          <span class="text-white-bg tagline-second"><%=t ".Find female professionals for your conference" %></span>
          <br/>
          <%= form_tag(search_path, :method => "get", :class =>"navbar-form pull-left") do %>
            <span class="text-white-bg">
              <div id="search-bar">
                <%= text_field_tag(:q, nil, :class => "span2", :placeholder => (t ".Search for talk topic")) %>
                <%= button_tag((t ".Search"), :class => "btn btn-large") %>
              </div>
            </span>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</section>

