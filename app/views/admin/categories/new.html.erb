<div class="container profiles">
  <div class="row">
    <div class="span12">
      <h1 class="title-profiles">Administration::<%= t(:categories, scope: "admin.dashboard.categories")%>::<%= t(:add, scope: "general")%></h1>
      <p>Du erstellst gerade eine neue Kategorie.</p>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <%= form_for [:admin, @category], html: {class: 'form-vertical'} do |f| %>
      <div class="control-group">
        <%= f.label :name, {class:"control-label"} %>
        <div class="controls">
          <%= f.text_field :name, class: "input-xxlarge" %>
        </div>
      </div>
      <div class="controls">
        <%= f.submit t(:create, scope: "general"), class:"btn btn-info" %>
      </div>
      <% end %>
    </div>
    <div class="span6">
    </div>
  </div>
</div>
