<div class="container profiles">
  <div class="row">
    <div class="span12">
      <h1 class="title-profiles">Administration::<%= t(:categories, scope: "admin.dashboard.categories")%>::<%= t(:edit, scope: "general")%></h1>
      <p>Du bearbeitest die Kategorie:
     <strong><%= @category.name %></strong>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="span6 text-center">
      <%= form_for [:admin, @category], html: {class: 'form-horizontal'} do |f| %>
        <%= f.label :name, {class:"control-label"} %>
        <div class="controls">
          <%= f.text_field :name, class: "input-xxlarge" %>
        </div>
      </div>
      <!-- TODO translation -->
      <div class="controls span3">
        <%= f.submit "Aktualisieren", class:"btn btn-info" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
