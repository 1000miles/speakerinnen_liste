<div class="container">
 
  <h3 class="profile_name">
    <%= profile.firstname %>&nbsp;<%= profile.lastname %>
  </h3>
  <div class="row"> 
    <% if profile.picture.present? %>
      
      <div class="span3">
        <%= image_tag(profile.picture_url, :width => 300) %>  
      </div>
      
      <div class="span5">
        <div class="header_small">Tags:</div>
          <%= raw profile.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
        <p></p>
        <div class="header_small">Meine Sprache/n:</div>
        <%= profile.languages %>
        <p></p>
        <div class="header_small">Vorträge gehalten auf:</div>
          <%= profile.talks %>
        <p></p>
      </div>

      <% else %>

        <div class="span8">
          <div class="header_small">Tags:</div>
          <%= raw profile.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
          <p></p>
          <div class="header_small">Meine Sprache/n:</div>
          <%= profile.languages %>
          <p></p>
          <div class="header_small">Vorträge gehalten auf:</div>
            <%= profile.talks %>
          <p></p>
        </div>
        
      <% end %>
  </div>
  <p></p>
  <div class="row">
    <div class="span8">
      <div class="header_small">
      Kontakt:
      </div>
      <%= mail_to profile.email %>
      <p></p>  <div class="header_small">
      Twitter:
      </div>
      <%= profile.twitter %>
    <p></p>
   
  </div>
</div>


<div class="row">
  <div class="span8">
    <div class="btn-toolbar">
      <%= link_to 'Show', profile, :class =>"btn btn-success btn-small" %>
      <% if can_edit_profile?(current_profile, profile) %>
        <%= link_to 'Edit', edit_profile_path(profile), :class =>"btn btn-danger btn-small" %>
        <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-small" %>
      <% end %>
    </div>
    <hr/>
  </div>
</div>


