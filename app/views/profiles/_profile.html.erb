
<div class="container">
 
  <h3 class="profile_name">
    <%= link_to profile.fullname, profile %>
  </h3>
  <div class="row"> 
    <% if profile.picture.present? %>
      
      <div class="span3">
        <%= image_tag(profile.picture_url, :width => 300) %>  
      </div>
      <div class="span5">
        <div class="header_small"><%= t ".topics" %></div>
        <%= raw profile.topic_list.map { |t| link_to t, topic_path(t) }.join(' ') %>
        <p></p>
        <div class="header_small"><%= t ".languages" %></div>
        <%= profile.languages %>
        <p></p>
        <div class="header_small"><%= t ".talks" %></div>
        <%= profile.talks %>
        <p></p>
        <div class="header_small"><%= t ".media" %></div>
        <%= profile.media_url_html %>
        <p></p>
      </div>

    <% else %>

      <div class="span8">
        <div class="header_small"><%= t ".topics" %></div>
        <%= raw profile.topic_list.map { |t| link_to t, topic_path(t) }.join(' ') %>
        <p></p>
        <div class="header_small"><%= t ".languages" %></div>
        <%= profile.languages %>
        <p></p>
        <div class="header_small"><%= t ".talks" %></div>
        <%= profile.talks %>
        <p></p>
        <div class="header_small"><%= t ".media" %></div>
        <%= profile.media_url_html %>
        <p></p>
      </div>
        
    <% end %>
  </div>
  <p></p>
  <div class="row">
    <div class="span8">
      <div class="header_small">
      <%= t ".contact" %>
      </div>
      <%= mail_to profile.email %>
      <p></p> 
      <% if profile.twitter.present? %>
        <div class="header_small">
          <%= t ".twitter" %>
        </div>
        <%=link_to "@" + profile.twitter, "http://twitter.com/#{profile.twitter}" %>
      <% end %>
      <p></p>
    </div>
  </div>


  <div class="row">
    <div class="span8">
      <div class="btn-toolbar">
        <%= link_to(t(".show"), profile, :class =>"btn btn-success btn-small") %>
        <% if can_edit_profile?(current_profile, profile) %>
          <%= link_to(t(".edit"), edit_profile_path(profile), :class =>"btn btn-danger btn-small") %>
          <%= link_to(t(".destroy"), profile, method: :delete, data: { confirm: t(".sure")}, :class =>"btn btn-primary btn-small") %>
        <% end %>
      </div>
      <hr/>
    </div>
  </div>
</div>
