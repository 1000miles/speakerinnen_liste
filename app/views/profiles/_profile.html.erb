<div class="container">
  <h3>
    <%= profile.firstname %>&nbsp;<%= profile.lastname %>
  </h3>
  <div class="row">
    <div class="span3">
      <%= image_tag(profile.picture_url, :width => 300) if profile.picture.present? %>  
    </div>
    <div class="span5">
      <div class="header_small">
        Themen:
      </div>
        <%= profile.topics %>
        <p>

      <div class="header_small">
        Sprachen:
      </div>
        <%= profile.languages %>
        <p>

      <div class="header_small">Vortr√§ge gehalten auf der:</div>
        CeBit
      <p>
    </div>
  </div>
  <p>
<div class="row">
  <div class="span8">
    <div class="header_small">
      Kontakt:
    </div>
    <%= mail_to profile.email %>
    <p>

    <div class="header_small">
      Twitter:
    </div>
    <%= profile.twitter %>
    <p>
  </div>
</div>


<div class="row">
  <div class="span8">
    <div class="btn-toolbar">
      <%= link_to 'Show', profile, :class =>"btn btn-success btn-small" %>
      <% if can_edit_profile?(current_profile, profile) %>
        <%= link_to 'Edit', edit_profile_path(profile), :class =>"btn btn-danger btn-small" %>
        <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-small" %>
      <% end %>
    </div>
    <hr/>
  </div>
</div>


