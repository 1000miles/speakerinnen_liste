<div class="span3">
  <div class="speaker">
    <div>
      <% if profile.picture.present? %>
        <%= image_tag(profile.picture_url , :class => "photo") %>
      <% else %>
        <%= image_tag("avatar.jpg", :alt => "avatar", :class => "photo") %>          
      <% end %>
    </div>
    <div class="name"><%= link_to profile.fullname, profile %></div>
    <div class="desc"><%= profile.topic_list.first if profile.topic_list.present? %></div>
    <div class="contact-info">
      <% if profile.twitter.present? %>
        <div class="header_small">
          <%= t ".twitter" %>
        </div>
        <%=link_to "@" + profile.twitter, "http://twitter.com/#{profile.twitter}" %>
      <% end %>
    </div>
  </div>
</div>