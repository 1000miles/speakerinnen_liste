<div class="container profiles">
  <%= simple_form_for(@profile, :html => { :multipart => true, :class => "form-horizontal well"}) do |f| %>
    <div class="row">
      <div class="span12">
        <%= render 'shared/error_messages' %>
        <br>
        <h1><%= t(:update, scope: "profiles.form")%></h1>
      </div>
    </div>
    <div class="row">
      <div class="span12 text-right">
        <%= link_to(profiles_path) do %>
          <span class="icon icon-arrow-left"></span> SpeakerinnenListe |
          <%= link_to(t(:show, scope: "profiles.edit"), profile_path) %>
        <% end %>
      </div>
    </div>
    <br>
    <br>
    <%= render partial: "shared/profile_formfields",
                 locals: { form_type: :update_profile, f: f, profile: @profile } %>
  <% end %>
</div>
