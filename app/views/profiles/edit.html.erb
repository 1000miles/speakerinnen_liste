<section class="content--bg-grey">
  <div class="layout-wrapper layout">
    <div class="layout__item 2/3">
      <%= render 'shared/error_messages' %>

      <h1><%= t(:update, scope: "profiles.form")%></h1>
    </div><!--

    --><div class="layout__item 1/3">
      <%= link_to(t(:home, scope: 'profiles.edit'), profiles_path, class: 'content__link--bg') %> |
      <%= link_to(t(:show, scope: 'profiles.edit'), profile_path, class: 'content__link--bg') %>
    </div>
  </div>

  <%= simple_form_for(@profile, html: { multipart: true, class: ""}) do |f| %>
    <%= render partial: "shared/profile_formfields",
                 locals: { form_type: :update_profile, f: f, profile: @profile } %>
  <% end %>

</section>
