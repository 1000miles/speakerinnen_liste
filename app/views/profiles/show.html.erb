
  <div class="container profiles">
    <div class="white-bg">
       <h1><%= t ".profile_from" %> <%= @profile.fullname %></h1>
    </div>
     <% if @profile.picture.present? %>
      <div class="row info-profiles"> 
        <div class="span3 photo">
            <%= image_tag(@profile.picture_url, :width => 300) %> 
        </div>

        <div class="span6 info-profiles">
            <%= t ".topics" %>
            <%= raw @profile.topic_list.map { |t| link_to t, topic_path(t) }.join(' ') %>
            <%= t ".languages" %>
            <%= @profile.languages %>
            <%= t ".talks" %>
            <%= @profile.talks %>   
            <%= t ".media" %>
            <%= @profile.media_url_html %>
              <h5><% if @profile.twitter.present? %>
                <%= t ".twitter" %>
                <%=link_to "@" + @profile.twitter, "http://twitter.com/#{@profile.twitter}" %></h5>
            <% end %>
        </div>
      </div>
       <div class="row info-profiles">
               <h5><%= t ".bio" %> <%= @profile.bio %> lorem ipsum lorem ipsum is ns lorem ipsum lorem ipsum is ns</h5>  
            </div>

       <% else %>
           <div class="row"> 
            <div class="span3 photo">
                <%= image_tag("avatar.jpg", :alt => "avatar") %> 
            </div>

            <div class="span6 info-profiles">
               <h4> <%= t ".topics" %><span><%= raw @profile.topic_list.map { |t| link_to t, topic_path(t) }.join('  ') %></span></h4>
               <h5><%= t ".languages" %><span> <%= @profile.languages %></span> </h5>
               <h5><%= t ".talks" %><span><%= @profile.talks %> </span></h5>  
               <h5><%= t ".media" %><span><%= @profile.media_url_html %> </span></h5> 
                 <h5><% if @profile.twitter.present? %>
                <%= t ".twitter" %>
                <span><%=link_to "@" + @profile.twitter, "http://twitter.com/#{@profile.twitter}" %></span></h5>
                <% end %>  
            </div>
           </div>
            <div class="row info-profiles">
               <h5><%= t ".bio" %><span> <%= @profile.bio %> lorem ipsum lorem ipsum is ns lorem ipsum lorem ipsum is ns</span></h5>  
            </div>
      </div>
  <% end %>


