<div class="container profiles">
  <h1 class="title-profiles">
    <%= t(:title, scope: "profiles.index") %>
  </h1>
  <div class="row">
    <div class="span6 italic">
      <%= t(:text, scope: "profiles.index").html_safe %>
    </div>
    <div class='span6' style="vertical-align:bottom">
      <%= form_tag(search_path, :method => "get", :class =>"") do %>
        <%= text_field_tag(:q, nil, :class => "", :id => "search-field", :placeholder => t(:search_text, scope: "pages.home.search")) %>
        <%= button_tag((t(:search, scope: "pages.home.search")), :class => "btn btn-large ") %>
      <% end %>
    </div>
  </div>
  <hr>
  <br>
  <div class='row'>
    <%= render partial: "profile", collection: @profiles %>
  </div>
  <div class="row">
    <div class="span12 text-center">
      <%= paginate @profiles %>
    </div>
  </div>
  <div class='row'>
    <div class='span12' id='topics-cloud'>
      <h3>
        Topics:
        <span class="topic-filter">
          <input type="text" value="" placeholder="Quick Filter" id="quick-filter" class="search-query" />
          <button class="btn" id="reset-quick-filter" title="Reset"><i class="icon-remove"></i></button>
        </span>

        <script type="text/javascript" charset="utf-8">

          // empty the input-field & show all topics
          $("#reset-quick-filter").on("click", function() {
            $("#quick-filter").val('');
            $(".s, .m, .l").css('display', 'inline');
          });

          // show matching & hide others
          $("#quick-filter").on('input', function(){
            var searchString       = $(this).val().toLowerCase();

            if (searchString.length > 1) {
              $(".s, .m, .l").each(function(index) {
                if ( $(this).text().toLowerCase().indexOf(searchString) >= 0 ) {
                  $(this).css('display', 'inline');
                } else {
                  $(this).css('display', 'none');
                }
              });
            } else {
              // show all
              $(".s, .m, .l").css('display', 'inline');
            };

          });
        </script>
      </h3>
      <% tag_cloud Profile.topic_counts.sort { |x, y| x.name <=> y.name }, %w[s m l] do |topic, css_class| %>
        <%= topic_link topic, class: css_class %>
      <% end %>
    </div>
  </div>
</div>
<br>
