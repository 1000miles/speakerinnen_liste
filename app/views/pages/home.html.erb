<section id="teaser-bg-01" class="photo-bar">
  <div class="layout-wrapper">
    <h1><%= t(:quote, scope: 'pages.home') %></h1>
    <h1 class="alpha--halve"><%= t(:quote_text, scope: 'pages.home') %></h1>
  </div>
</section>

<!-- Anker für Kategorien -->
<a id="categories_anker"></a>

<section>
  <div class="layout-wrapper">
    <h1><%= t(:description, scope: 'pages.home') %></h1>
    <h1 class="alpha--halve bv ph0 mh display--block">
      <%= t(:description_text, scope: 'pages.home') %>
    </h1>

    <% @categories.each_slice(5) do |sliced_categories| %>
      <% sliced_categories.each do |category| %>
        <%= category_link category %>
      <% end %>
    <% end %>
  </div>
</section>

