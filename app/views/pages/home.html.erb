<section id="start-teaser" class="photo-bar">
  <div class="layout-wrapper">
    <h1><%= t(:heading, scope: 'pages.home.search') %></h1>
    <h1 class="alpha--halve"><%= t(:tagline, scope: 'pages.home.search') %></h1>

    <div class="page-box">
      <%= form_tag(search_path, method: 'get', class:'page-box') do %>
        <%= text_field_tag(:q, nil, class: '', id: '', placeholder: t(:search_text, scope: 'pages.home.search')) %>
        <%= button_tag((t(:search, scope: 'pages.home.search')), class: '') %>
      <% end %>

      <p class="page-overlay-link"><%= link_to t(:categories, scope: 'pages.home.speakers'), '#categories_anker' %></p>
      <p class="page-overlay-link"><%= link_to t(:speaker_index, scope: 'pages.home.speakers'), profiles_path %></p>
    </div>
  </div>
</section>

