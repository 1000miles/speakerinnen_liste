<!DOCTYPE html>
<html>
<head>
  <title><%= t ".title" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- NAVBAR STARTS HERE-->  
<div class="wrapper">
   <div class="page">
    <div class="header-container">
      <div class="top-header">
        <div class="right">
            <div class="btn drop-down-holder addpadding">
               log in     <div class="icon"></div>
                <div class="drop-down">
                    <div class="eckschen"></div>
                    <div class="inner rb full">
                        <ul>
                            <li><a href="#">Account</a></li>
                            <li><a href="#">Newsletter</a></li>
                            <li><a href="#">Invitations</a></li>                    
                            <li><a href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="btn"><a href="#"> Invite Friends</a></div>
        </div>
                <div class="clear"></div>
    </div>

    <div class="header">
        <div class="logo-wrapper with-user">
            <a href="#" class="logo"> <%= link_to t(".title"), root_path, :class => "brand" %></a>
         </div>

<a href="#" class="mqbtn">Choose by topic  <%= button_tag(t(".search"), :class => "btn") %></a>

<a href="#" class="mqbtn">Choose by location   <p class="navbar-text pull-left">
        <%= link_to_unless I18n.locale == :en, "E", locale: :en %> | 
        <%= link_to_unless I18n.locale == :de, "D", locale: :de %>
      </p></a>


<a href="#" class="mqbtn">Choose by language</a>

</div>



      <ul class="nav" id="main-menu-left">
        <li><%= link_to t(".list"), profiles_path %></li>
        <li><%= link_to t(".contact"), contact_path %></li>
      </ul>

      <%= form_tag(search_path, :method => "get", :class =>"navbar-form pull-left") do %>
        <%= text_field_tag(:q, nil, :class => "span2") %>
        <%= label_tag(:q) do %> 
          <%= button_tag(t(".search"), :class => "btn") %>
        <% end %>
      <% end %>

    

      <p class="navbar-text pull-right">
        <% if profile_signed_in? %>
          <%= link_to(t(".my_profile"), profile_path(current_profile), :class => 'navbar-link')%> |
          <%= link_to(t(".account"), edit_profile_registration_path, :class => 'navbar-link') %> |
          <%= link_to(t(".logout"), destroy_profile_session_path, method: :delete, :class => 'navbar-link') %>
        <% else %>
          <%= link_to(t(".signup"), new_profile_registration_path, :class => 'navbar-link') %> |
          <%= link_to(t(".login"), new_profile_session_path, :class => 'navbar-link') %> |
          <%= link_to("Twitter", profile_omniauth_authorize_path(:twitter), :class => 'navbar-link') %>
        <% end %>
      </p>
      <!-- admin link if admin -->
      <p class="navbar-text pull-right">
        <% if admin?(current_profile) %>
          <%= link_to "admin", admin_root_path %>
        <% end %>
      </p>
    </div>
  </div>
</div>

<!-- CONTENT STARTS HERE-->  
<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
  </div>
  <%= yield %>
</div>

<!-- FOOTER STARTS HERE-->  
<hr>
<footer id="footer">
  <div class="container">
      <ul class="nav nav-pills">
        <li><%= link_to t(".contact"), contact_path %> </li>
        <li style="padding-top: 5px;"> | </li>
        <li><%= link_to t(".impressum"), impressum_path %></li>
      </ul>
  </div>
</footer>
<hr>
</body>
</html>
