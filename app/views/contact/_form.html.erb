<%= form_for @message, :url => url do |f| %>
  <%= f.label :name, t(".name") %>
  <br>
  <%= f.text_field :name, placeholder: t(".name_placeholder") %>
  <br>
  <%= f.label :email, t(".email") %>
  <br>
  <%= f.text_area :email, :style => "width: 250px; height: 30px" %>
  <br>
  <%= f.label :subject, t(".subject") %>
  <br>
  <%= f.text_area :subject, :style => "width: 250px; height: 30px" %>
  <br>
  <%= f.label :body, t(".body") %>
  <br>
  <%= f.text_field :body, :style => "width: 750px; height: 100px" , :placeholder => t(".body_placeholder") %>
  <br>
  <%= f.submit %>
<% end %>