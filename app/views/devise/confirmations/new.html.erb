<div class="container">
  <div style="margin-top:50px">
    <h2>Resend confirmation instructions</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f| %>

      <%= f.input :email, :label => false, placeholder: "Email", :autofocus => true %>
      <%= f.submit "Resend confirmation instructions", class: 'btn' %>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
</div>
