<div class="container">
  <div id="badge-log">
    <div id="badge-inner">

      <div id="logo">
        <%= image_tag("logo8.png", id:"logo8") %>
      </div>

      <div id="login">
        <h4><%= t(:forgot_password, scope: "devise.registrations") %></h4>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form', method: :post }) do |f| %>
          <%= f.email_field :email, autofocus: true %> 
          <%= f.submit t(:send_instructions, scope: "devise.registrations"), class:'btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>