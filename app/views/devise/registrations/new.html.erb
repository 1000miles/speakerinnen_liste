<div id="container">
  <div id="badge-log">
    <div id="badge-inner">

      <%= render 'shared/error_messages' %>

      <div id="logo">
        <%= image_tag("logo8.png", id:"logo8") %>
      </div>

      <div id="login">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "new_profile"}) do |f| %>
          <div class="control-group">
            <div class="controls">
              <%= f.email_field :email, :autofocus => true, class:"input-xlarge", placeholder: t(:email, scope: "devise.registrations") %>
            </div>
          </div>

          <% if f.object.password_required? %>
            <div class="control-group">
              <div class="controls">
                <%= f.password_field :password, class:"input-xlarge", placeholder: t(:password, scope: "devise.registrations") %>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <%= f.password_field :password_confirmation, class:"input-xlarge", placeholder: t(:confirmation, scope: "devise.registrations") %>
              </div>
            </div>

            <div class="control-group">
              <%= f.submit(t(:signup, scope: "devise.registrations"), class: "btn") %>
            </div>

            <div class="control-group">
              <%- if devise_mapping.omniauthable? %>
                <%- Profile.omniauth_providers.each do |provider| %>
                  <%= link_to t(:signup_via, scope: "devise.registrations"), omniauth_authorize_path(:profile, provider), class: 'btn' %>
                <% end -%>
             <% end -%>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="span5 offset1">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to t(:no_confirmation, scope: "devise.registrations"), new_confirmation_path(:profile) %><br />
    <% end -%>
  </div>
</div>
